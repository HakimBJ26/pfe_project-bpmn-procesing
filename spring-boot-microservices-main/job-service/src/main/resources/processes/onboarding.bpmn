<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
                  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
                  id="Definitions_Onboarding"
                  targetNamespace="http://camunda.org/examples"
                  exporter="Camunda Modeler"
                  exporterVersion="5.0.0">

  <bpmn:process id="onboardingProcess" name="Onboarding Process" isExecutable="true">
    <!-- Début du processus -->
    <bpmn:startEvent id="StartEvent_1">
      <bpmn:outgoing>SequenceFlow_1</bpmn:outgoing>
    </bpmn:startEvent>

    <!-- Tâche utilisateur avec assignation dynamique -->
    <bpmn:userTask id="userTask1" name="Formulaire d'Onboarding"
                  camunda:assignee="57b8514b-5df3-456c-aec6-381bdfa24882"
                  camunda:formKey="dynamicForm">
      <bpmn:extensionElements>
        <camunda:taskListener event="create" class="com.safalifter.jobservice.listener.FormGeneratorListener"/>
      </bpmn:extensionElements>
      <bpmn:incoming>SequenceFlow_1</bpmn:incoming>
      <bpmn:outgoing>SequenceFlow_2</bpmn:outgoing>
    </bpmn:userTask>

    <!-- Flèches de connexion -->
    <bpmn:sequenceFlow id="SequenceFlow_1" sourceRef="StartEvent_1" targetRef="userTask1"/>
    <bpmn:sequenceFlow id="SequenceFlow_2" sourceRef="userTask1" targetRef="EndEvent_1"/>

    <!-- Fin du processus -->
    <bpmn:endEvent id="EndEvent_1">
      <bpmn:incoming>SequenceFlow_2</bpmn:incoming>
    </bpmn:endEvent>
  </bpmn:process>

  <!-- Définition du diagramme (éléments visuels) -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="onboardingProcess">

      <!-- Élément visuel Start Event -->
      <bpmndi:BPMNShape id="StartEvent_1_di" bpmnElement="StartEvent_1">
        <dc:Bounds x="150" y="100" width="36" height="36"/>
      </bpmndi:BPMNShape>

      <!-- Élément visuel User Task -->
      <bpmndi:BPMNShape id="userTask1_di" bpmnElement="userTask1">
        <dc:Bounds x="300" y="80" width="100" height="80"/>
      </bpmndi:BPMNShape>

      <!-- Élément visuel End Event -->
      <bpmndi:BPMNShape id="EndEvent_1_di" bpmnElement="EndEvent_1">
        <dc:Bounds x="500" y="100" width="36" height="36"/>
      </bpmndi:BPMNShape>

      <!-- Connexions entre éléments -->
      <bpmndi:BPMNEdge id="SequenceFlow_1_di" bpmnElement="SequenceFlow_1">
        <di:waypoint x="186" y="118"/>
        <di:waypoint x="300" y="120"/>
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="SequenceFlow_2_di" bpmnElement="SequenceFlow_2">
        <di:waypoint x="400" y="120"/>
        <di:waypoint x="500" y="118"/>
      </bpmndi:BPMNEdge>

    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>

</bpmn:definitions>