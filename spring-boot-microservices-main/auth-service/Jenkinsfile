pipeline {
    agent any
    
    tools {
        maven 'Maven3'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout simple
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Simple build sans tests
                sh 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Test Unitaires') {
            steps {
                // Tests avec profil test pour éviter les problèmes de connexion au Config Server
                sh 'mvn test -Dspring.profiles.active=test'
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
        success {
            echo 'Pipeline terminée avec succès!'
        }
        failure {
            echo 'Pipeline échouée!'
        }
    }
}
