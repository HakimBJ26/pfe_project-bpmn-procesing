pipeline {
    agent any
    tools {
        maven 'Maven3'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Debug Directory Structure') {
            steps {
                sh 'pwd'
                sh 'ls -la'
                sh 'find . -name "pom.xml" | sort'
            }
        }
        stage('Build auth-service') {
            steps {
                dir('auth-service') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
    }
}